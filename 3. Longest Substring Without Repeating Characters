#include <iostream>
using namespace std;
int main(){
    string s;
    cin>>s;
    int n = s.length();
    int maxLength = 0;
    int i=0,j=0;
    bool exist[256] = {false};
    while(j<n){
        if(exist[s[j]]){
            maxLength = max(maxLength , j-i);
            while(s[i]!= s[j]){
                exist[s[i]]=false;
                i++;
            }
            i++;
            j++;

        }
        else{
            exist[s[j]] = true;
            j++;
        }
    }
maxLength = max(maxLength , n-i);
cout<<maxLength;
}
